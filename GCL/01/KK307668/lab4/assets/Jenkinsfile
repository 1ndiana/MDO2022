pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh '''
                rm -rf MDO2022
                git config --global user.name "kkachniarz220"
                git config --global user.email "kkachniarz@protonmail.com"
                git clone https://github.com/InzynieriaOprogramowaniaAGH/MDO2022.git
                cd MDO2022
                git switch -c KK307668
                git branch --set-upstream-to=origin/KK307668 KK307668
                git pull
                cd GCL/01/KK307668/lab4/assets
                ls
                docker build -t bldr:latest . -f ./Dockerfile
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                cd MDO2022/GCL/01/KK307668/lab4/assets
                docker build -t test:latest . -f ./Dockerfile-with-tests
                '''
            }
        }
    }
}
