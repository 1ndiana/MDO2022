pipeline {
    agent{
    dockerfile true}
    stages {
        stage('Build') { 
            agent {
                docker { image 'node' }
            }
            steps {
                sh'''
                ls
                cd GCL/03/JZ307699/Lab_4
                ls
                docker build -t easy/sauce:latest . -f Dockerfile
                cd Dockerfile2
                docker build -t easy/sauce2:latest .
                '''
                //docker build -t easy/sauce:latest . -f Dockerfile
                //                cd Dockerfile2
                //docker build -t easy/sauce2:latest .
            }
        }
        stage('Test') { 
            steps {
                sh '''
                docker run easy/sauce2:latest
                '''
            }
        }
    }
}
