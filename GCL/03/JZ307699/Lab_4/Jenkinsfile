pipeline {
    agent {
        docker { image 'node:16.13.1-alpine' }
    }
    stages {
        stage('Build') { 
            steps {
                sh'''
                cd GCL/03/JZ307699/Lab_4
                docker build -t easy/sauce:latest .
                cd Dockerfile2
                sudo docker build -t easy/sauce2:latest .
                '''
            }
        }
        stage('Test') { 
            steps {
                sh '''
                sudo docker run easy/sauce2:latest
                '''
            }
        }
    }
}
